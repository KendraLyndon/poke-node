<%- contentFor('body') %>

<h1>Trainers : </h1>

<table>
  <thead>
    <th>
      Trainer
    </th>
    <th>
      Pokemon
    </th>
  </thead>
  <tbody>
    <% for(var i=0; i<trainers.length; i++){ %>
      <tr>
        <td>
          <%= trainers[i].name %>
        </td>
        <td>
        </td>
      </tr>
      <% for(var j=0; j<pokemon.length; j++){ %>
        <% if(pokemon[j].trainer_id === trainers[i].id){ %>
        <tr>
          <td>
          </td>
            <td>
                <%= pokemon[j].name %>
            </td>
        </tr>
        <% } %>
      <% } %>
    <% } %>
  </tbody>
</table>
