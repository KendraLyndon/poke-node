<%- contentFor('body') %>

<h1>Gym</h1>

<% if(p1 === p2) { %>
  <h2>A Pokemon cannot fight itself! Please choose a different Pokemon!</h2>
<% } %>

<div id='pre-battle'>
  <h2>Pokemon 1 : </h2>
  <% if(poke1) { %>
    <h3><%= poke1.name %></h3>
  <% } else { %>
    <form action='/pokemon/assign/p1' method='POST'>
      Choose Pokemon 1 :
      <select name='player'>
        <% for(var i=0; i<pokemon.length; i++){ %>
          <option value='<%= pokemon[i].id %>'><%= pokemon[i].name %></option>
        <% } %>
      </select>
      <input type='submit' value='choose p1' />
    </form>
  <% } %>

  <h2>Pokemon 2 : </h2>
  <% if(poke2 && (p1 !== p2)) { %>
        <h3><%= poke2.name %></h3>
  <% } else { %>
    <form action='/pokemon/assign/p2' method='POST'>
      Choose Pokemon 2 :
      <select name='player'>
        <% for(var i=0; i<pokemon.length; i++){ %>
          <option value='<%= pokemon[i].id %>'><%= pokemon[i].name %></option>
        <% } %>
      </select>
      <input type='submit' value='choose p2' />
    </form>
  <% } %>

  <button type='button' id='reset'>Reset</button>

  <% if((p1 && p2) && (p1 !== p2)){ %>
    <button type="button" name="battle" id='battle'>Battle!</button>
  <% } %>
</div>

<div id='post-battle'>
  <% if(poke1 && poke2){ %>
    <% if(poke1.cp > poke2.cp){ %>
      <h2>WINNER!</h2>
      <h2><%= poke1.name %></h2>
    <% } else if (poke2.cp > poke1.cp) {%>
      <h2>WINNER!</h2>
      <h2><%= poke2.name %></h2>
    <% } %>
  <% } %>
</div>

<script src="https://code.jquery.com/jquery-3.1.0.js" integrity="sha256-slogkvB1K3VOkzAI8QITxV3VzpOnkeNVsKvtkYLMjfk=" crossorigin="anonymous"></script>
<script type='text/javascript'>
  var battle = $('#battle');
  var preBattle = $('#pre-battle');
  var postBattle = $('#post-battle');
  var reset = $('#reset');
  $(postBattle).hide();
  $(reset).on('click',function(){
    window.location.href = '/gym/clear';
  });
  $(battle).on('click',function(){
    $(preBattle).hide();
    $(postBattle).show();
  })
</script>
