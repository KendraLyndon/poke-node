<%- contentFor('body') %>

<h1>Gym</h1>

<% if(p1 === p2) { %>
  <h2>A Pokemon cannot fight itself! Please choose a different Pokemon!</h2>
<% } %>

<h2>Pokemon 1 : </h2>
<% if(p1) { %>
  <% for(var i=0; i<pokemon.length; i++){ %>
    <% if(pokemon[i].id === p1) { %>
      <h3><%= pokemon[i].name %></h3>
    <% } %>
  <% } %>
<% } else { %>
  <form action='/pokemon/assign/p1' method='POST'>
    Choose Pokemon 1 :
    <select name='player'>
      <% for(var i=0; i<pokemon.length; i++){ %>
        <option value='<%= pokemon[i].id %>'><%= pokemon[i].name %></option>
        <% } %>
      </select>
      <input type='submit' value='choose p1' />
    </form>

<% } %>

<h2>Pokemon 2 : </h2>
<% if(p2 && (p1 !== p2)) { %>
  <% for(var i=0; i<pokemon.length; i++){ %>
    <% if(pokemon[i].id === p2) { %>
      <h3><%= pokemon[i].name %></h3>
    <% } %>
  <% } %>
<% } else { %>
  <form action='/pokemon/assign/p2' method='POST'>
    Choose Pokemon 2 :
    <select name='player'>
      <% for(var i=0; i<pokemon.length; i++){ %>
        <option value='<%= pokemon[i].id %>'><%= pokemon[i].name %></option>
        <% } %>
      </select>
      <input type='submit' value='choose p2' />
    </form>
<% } %>
